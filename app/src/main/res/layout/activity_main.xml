<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="410dp"
    android:layout_height="729dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:background="#84EAC8"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Prueba DiagnÃ³stca"
            android:textStyle="bold|italic"
            android:textColor="#000000"/>

        <Button
            android:layout_marginTop="100dp"
            android:id="@+id/Ir_Proximida"
            android:layout_width="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="150dp"
            android:backgroundTint="#CA0724"
            android:backgroundTintMode="add"
            android:textColor="@color/white"
            android:textStyle=""
            android:text="Activity Proximidad"></Button>
        <Button
            android:id="@+id/Ir_Luminosidad"
            android:layout_width="240dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#1A237E"
            android:textColor="@color/white"
            android:textStyle="bold|normal"
            android:backgroundTintMode="add"
            android:text="Activity Luminosidad"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
